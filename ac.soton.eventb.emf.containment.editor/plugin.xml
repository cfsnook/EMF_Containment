<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="ac.soton.eventb.emf.containment.presentation.ContainmentModelWizardID"
            name="%_UI_ContainmentModelWizard_label"
            class="ac.soton.eventb.emf.containment.presentation.ContainmentModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/ContainmentModelFile.gif">
         <description>%_UI_ContainmentModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="ac.soton.eventb.emf.containment.presentation.ContainmentEditorID"
            name="%_UI_ContainmentEditor_label"
            icon="icons/full/obj16/ContainmentModelFile.gif"
            extensions="containment"
            class="ac.soton.eventb.emf.containment.presentation.ContainmentEditor"
            contributorClass="ac.soton.eventb.emf.containment.presentation.ContainmentActionBarContributor">
      </editor>
   </extension>

</plugin>
